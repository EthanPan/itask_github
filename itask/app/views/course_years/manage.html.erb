<%= render "layouts/course_year_menu"%>
<ul class="nav nav-tabs">
  <li class="active">
    <a href="#">学生</a>
  </li>
  <li><a href="#">配置</a></li>
</ul>
<table  class="table table-hover table-striped">                        
	<thead>
                <tr>
                  <th>学号</th>
                  <th>姓名</th>
                  <th>状态</th>
                  <th>操作</th>
                </tr>
  </thead> 
  <tbody> 
   <% @course_year.users.each do |u| %>     
	<tr>  
		<td><%= u.user_num %></td> 
		<td><%= u.name %></td>
		<td><% if u.status == 0%>
			<span class="badge badge-success">通过</span>
			
			<% elsif u.status == 1%>
			<span class="badge badge-important">待审核</span>
			<% elsif u.status == 2%>
			<span class="badge badge-inverse">未通过</span>
			<%end%>
		</td> 
		<th><%= link_to "删除" ,user_course_year_path(u),:method => "delete"%></th>
	</tr> 
	<%end%>   
	</tbody>
</table>