<html>
<h1> 动态列表 </h1>
<table class="table table-hover table-striped">
	  <thead>  
		<tr>
			<th> 作业 </th> 
			<th> 内容 </th> 
		</tr>
	  </thead>                       
	<tbody>
		<% @events.each do |e| %>
			<tr>
				<td><%= e.assignment.course_year.course.name %>/<%= e.assignment.title %></td>
				<% if e.operator == '0' %>
				    <td> System <%= e.action %></td>
				<% else %>
					<td><%= User.find(e.operator).name %> <%= e.action %></td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>
</html>